<main>
  <h2 class="title">MY PAGE</h2>
  <div class="container">
    <div class="row">
      <div class="col-sm-3 offset-sm-1">
        <% if @user == current_user %>
          <%= link_to "マイページ編集", edit_user_registration_path(@user), class: "btn btn-outline-warning btn-sm rounded-0 px-3 mb-2" %>
        <% end %>
        <%= attachment_image_tag @user, :image, format: 'jpeg', size: "255x255", fallback: "content-test.jpg", class: "d-block mx-auto content" %>
      </div>
      <div class="col-sm-6 offset-sm-1">
        <table class="table table-borderless">
          <% if @user == current_user %>
          <tr>
            <th>名前</th>
            <td><%= @user.full_name %></td>
          </tr>
          <% end %>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.nick_name %></td>
          </tr>
          <% if @user == current_user %>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>