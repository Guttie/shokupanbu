<main>
  <h2 class="title">EDIT PROFILE</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <h3 class="mb-2">会員情報編集</h3>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :image, "プロフィール画像" %>
            <%= f.attachment_field :image, class: "rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :full_name, "お名前(変更不可)" %>
            <%= f.text_field :full_name, class: "form-control rounded-0", readonly: true %>
          </div>
          <div class="form-group">
            <%= f.label :nick_name, "ユーザーネーム(表示名)"  %> <span class="text-danger">※</span>
            <%= f.text_field :nick_name, autofocus: true, class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %> <span class="text-danger">※</span>
            <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-0" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <%= f.label :password, "新しいパスワード" %> <span class="font-weight-bold">(変更しない場合は空欄)</span>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0" %>
            <% if @minimum_password_length %>
              <span class="font-weight-bold"><%= @minimum_password_length %> 英数字以上</span>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード(確認用)"  %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :current_password, "現在のパスワード"  %> <span class="text-danger">※</span>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control rounded-0" %>
          </div>
          <div class="my-5">
            <%= f.submit "更新", class: "btn btn-outline-success mx-auto d-block rounded-0" %>
          </div>
        <% end %>
        <h3 class="mb-2">退会</h3>
        <p>
          退会ご希望の場合はこちら
          <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会しますか?" }, method: :delete, class: "btn btn-outline-danger rounded-0" %>
        </p>
        <div class="mb-5">
          <%= link_to "戻る", :back %>
        </div>
      </div>
    </div>
  </div>
</main>
