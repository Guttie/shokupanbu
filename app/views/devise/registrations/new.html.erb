<main>
  <h2 class="title">SIGN UP</h2>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 mx-auto">
        <h3>新規会員登録</h3>
        <p class="text-danger mb-2">※印は必須項目です。</p>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :full_name, "お名前" %> <span class="text-danger">※</span>
            <%= f.text_field :full_name, autofocus: true, placeholder: "(例)食パン太郎", class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :nick_name, "ユーザーネーム(表示名)" %> <span class="text-danger">※</span>
            <%= f.text_field :nick_name, placeholder: "(例)Shokupanbu", class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %> <span class="text-danger">※</span>
            <%= f.email_field :email, autocomplete: "email", placeholder: "(例)sample@sample.com", class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード" %> <span class="text-danger">※</span>
            <% if @minimum_password_length %>
              <span class="font-weight-bold">(<%= @minimum_password_length %> 英数字以上)</span>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0" %>
          </div>
          <div class="my-5">
            <%= f.submit "作成", class: "btn btn-outline-success mx-auto d-block rounded-0" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</main>