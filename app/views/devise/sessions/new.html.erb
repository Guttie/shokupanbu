<main>
  <h2 class="title">SIGN IN</h2>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 offset-md-3">
        <h3>サインイン</h3>
        <p class="text-danger mb-2">※印は必須項目です。</p>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %> <span class="text-danger">※</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "(例)sample@sample.com", class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード" %> <span class="text-danger">※</span>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-0" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログイン状態を維持" %>
            </div>
          <% end %>
          <div class="my-5">
            <%= f.submit "進む", class: "btn btn-outline-success mx-auto d-block rounded-0 px-3" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</main>
