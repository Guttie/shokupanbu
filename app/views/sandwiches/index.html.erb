<main>
  <h2 class="title">SANDWICHES</h2>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <% if @sandwiches.exists? %>
          <div class="d-flex flex-wrap">
            <% @sandwiches.each do |sandwich| %>
              <div id="slider_<%= sandwich.id %>" class="col col-4 mb-5">
                <% sandwich.sandwich_images.each do |image| %>
                  <%= link_to sandwich_path(sandwich.id) do %>
                    <%= attachment_image_tag image, :image, format: 'jpeg', size: "350x350", class: "d-block mx-auto content" %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>投稿はありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</main>

<script>
  <% @sandwiches.each do |sandwich| %>
    $(function() {
      $('#slider_<%= sandwich.id %>').slick({
        speed: 900,
        arrows: false,
        autoplay: true,
        autoplaySpeed: 6000,
      });
    });
  <% end %>
</script>