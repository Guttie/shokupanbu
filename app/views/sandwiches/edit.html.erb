<main>
  <h2 class="title">EDIT SANDWICH</h2>
  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto">
        <h3>サンドウィッチレビュー 編集</h3>
        <p class="text-danger mb-5">※印は必須項目です。</p>
        <%= form_with model: @sandwich, local:true do |f| %>
          <div class="form-group">
            <%= f.label :image, "画像" %><span class="text-danger">※</span>
            <%= f.attachment_field :sandwich_images_images, multiple: true, class: "rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :name, "店舗名" %><span class="text-danger">※</span>
            <%= f.text_field :name, class: "form-control rounded-0" %>
          </div>
          <div class="form-group">
            <%= f.label :review, "レビュー" %><span class="text-danger">※</span>
            <%= f.text_area :review, rows: "5", class: "form-control rounded-0" %>
          </div>
          <div class="my-5">
            <%= f.submit "更新", class: "btn btn-outline-success mx-auto d-block px-3 rounded-0" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>