<main>
  <h2 class="title">SHOPS</h2>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="d-flex flex-wrap">
          <% @shops.each do |shop| %>
            <div id="slider_<%= shop.id %>" class="col col-lg-4 mb-5">
              <% shop.shop_images.each do |image| %>
                <%= link_to shop_path(shop.id) do %>
                  <%= attachment_image_tag image, :image, format: 'jpeg', size: "350x350", class: "d-block mx-auto content" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  <% @shops.each do |shop| %>
    $(function() {
      $('#slider_<%= shop.id %>').slick({
        speed: 900,
        arrows: false,
        autoplay: true,
        autoplaySpeed: 6000,
      });
    });
  <% end %>
</script>