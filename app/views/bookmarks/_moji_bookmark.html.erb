<% if post.bookmarked_by?(current_user) %>
  <%= link_to "ブックマーク解除", post_bookmarks_path(post), method: :delete, remote: true, class: "btn btn-outline-warning btn-sm rounded-0 px-3 m-3" %>
<% else %>
  <%= link_to "ブックマークする", post_bookmarks_path(post), method: :post, remote: true, class: "btn btn-outline-warning btn-sm rounded-0 px-3 m-3" %>
<% end %>