<% if post.bookmarked_by?(current_user) %>
  <%= link_to "", post_bookmarks_path(post), method: :delete, remote: true, class: "fas fa-bookmark fa-2x bookmark" %></td>
<% else %>
  <%= link_to "", post_bookmarks_path(post), method: :post, remote: true, class: "far fa-bookmark fa-2x bookmark" %></td>
<% end %>