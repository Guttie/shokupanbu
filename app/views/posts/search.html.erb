<main>
  <h2 class="title">SEARCH RESULT</h2>
  <div class="container">
    <div class="row my-5">
      <div class="col-12 col-md-8 offset-md-2 mb-5">
        <h3>検索結果</h3>
        <% if @posts.count != 0 %>
          <table class="table">
            <tr>
              <th class="text-center header">カテゴリー</th>
              <th class="text-center header">投稿タイトル</th>
              <th class="text-center header">投稿日時</th>
            </tr>
            <% @posts.each do |post| %>
              <tr>
                <td class="text-center"><%= post.category_i18n %></td>
                <td class="text-center"><%= post.name %></td>
                <td class="text-center"><%= l post.created_at %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p>検索結果はありません</p>
        <% end %>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</main>