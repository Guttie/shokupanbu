<main>
  <h2 class="title">SHOPS</h2>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <% if @posts.exists? %>
          <div class="d-flex flex-wrap">
            <% @posts.each do |post| %>
              <% if post.category == "shop" %>
                  <div id="slider_<%= post.id %>" class="col col-4 mb-5">
                    <% post.post_images.each do |image| %>
                      <%= link_to post_path(post.id) do %>
                        <%= attachment_image_tag image, :image, format: 'jpeg', size: "350x350", class: "d-block mx-auto content" %>
                      <% end %>
                    <% end %>
                  </div>
                  <div id="bookmark_button_<%= post.id %>">
                    <%= render "bookmarks/bookmark", post: post %>
                  </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p>投稿はありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</main>

<script>
  <% @posts.each do |post| %>
    $(function() {
      $('#slider_<%= post.id %>').slick({
        speed: 900,
        arrows: false,
        autoplay: true,
        autoplaySpeed: 6000,
      });
    });
  <% end %>
</script>